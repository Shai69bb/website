  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "postbuild": "run-p generate:sitemap",
    "generate:sitemap": "next-sitemap",
    "export": "next export",
    "start": "next start",
    "lint": "next lint",
    "markdown-link-check": "find content/docs -type f -name '*.md' | xargs -L1 markdown-link-check --quiet --config markdown-link-check.json"
  },
  "lint-staged": {
    "*.{scss}": [
      "stylelint --fix"
    ],
    "*.{js,json,jsx,md,mdx}": [
      "prettier --write"
    ],
    "*.{js,jsx,md,mdx}": [
      "eslint --cache --fix"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "browser": {
    "fs": false,
    "path": false,
    "child_process": false
  },
